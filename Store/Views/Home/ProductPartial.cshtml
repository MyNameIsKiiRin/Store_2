@using Store.Models.EF;
@model IEnumerable<SanPham>

<div class="content-bottom">
    <div class=" row">
                @foreach (var item in Model.Take(4))
                {
                    <div class=" col-md-3 ">
                        <a href=@Url.Action("Index","Products",new {id=item.MaSP })>
                            <div class="view view-fifth">
                                <div class="top_box">
                                    <h3 class="m_1 text-center">@item.TenSP</h3>
                                    <div class="grid_img">
                                        <div class="css3 img-fluid"><img src=@Url.Content("~/assets/Client/Product_Images/"+item.HinhAnh1) alt="" /></div>
                                        <div class="mask">
                                            <a class="info" href=@Url.Action("Index","Products",new {id=item.MaSP })>Chi Tiết</a>
                                        </div>
                                    </div>
                                    <div class="price">@item.DonGia.Value.ToString("#,##") đ</div>
                                </div>
                            </div>
                            <ul class="list" style="background:none">
                                <li style="background:none">
                                    <span style="color: white; background: #2ecc71; border-radius: 25px; padding: 6px;">Trả góp 0%</span>
                                </li>
                            </ul>
                        </a>
                    </div>
                }
    </div>
</div>
